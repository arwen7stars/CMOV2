<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stocks.ListCompanies"
             Title ="Companies List">
  <ListView x:Name="MyListView"
            ItemsSource="{Binding Items}"
            CachingStrategy="RecycleElement">
            
    <!--Built in Cells-->
    <ListView.ItemTemplate>
        <DataTemplate>
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <Switch IsToggled="{Binding Selected}" Grid.Column="0" />

                        <StackLayout VerticalOptions="CenterAndExpand" Grid.Column="1">
                            <Label Text="{Binding Data.Name}"  />
                            <Label Text="{Binding Data.Symbol}" FontSize="10" />
                        </StackLayout>

                        <Image Source="{Binding Data.ImageSource}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Aspect="AspectFill"
                               Grid.Column="2"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
    </ListView.ItemTemplate>
    
    <!--Custom View Cells-->
